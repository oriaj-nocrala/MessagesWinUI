<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MessagesWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MessagesWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:MessagesWinUI.Helpers"
    xmlns:viewmodels="using:MessagesWinUI.ViewModels"
    xmlns:controls="using:MessagesWinUI.Controls"
    xmlns:models="using:MessagesWinUI.Models"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.AppTitle}">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid DataContext="{x:Bind ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Padding="16,8" Spacing="12">
                <PersonPicture Width="32" Height="32" DisplayName="{Binding CurrentUserName, Mode=OneWay}" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUserName, Mode=OneWay}" FontWeight="SemiBold" FontSize="14" />
                    <TextBlock Text="{Binding OnlineStatus}" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                </StackPanel>
                <Button 
                    Content="{Binding DiscoverPeersText}" 
                    Margin="12,0,0,0" 
                    Command="{Binding DiscoverPeersCommand}"
                    IsEnabled="{Binding IsDiscovering, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Peers List -->
            <Border Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,8">
                        <TextBlock Text="{Binding PeersText}" FontSize="16" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding PeerCount, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Peers, Mode=OneWay}"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedPeer, Mode=TwoWay}"
                              ItemClick="PeersListView_ItemClick"
                              IsItemClickEnabled="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8" Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Avatar -->
                                    <PersonPicture 
                                        Grid.Column="0"
                                        Width="32" 
                                        Height="32" 
                                        DisplayName="{Binding Name}" 
                                        Margin="0,0,12,0" />
                                    
                                    <!-- Peer Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock 
                                            Text="{Binding Name}" 
                                            FontWeight="SemiBold" 
                                            FontSize="14" 
                                            TextTrimming="CharacterEllipsis" />
                                        <TextBlock 
                                            Text="{Binding Status}" 
                                            FontSize="12" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Text="{Binding LastSeenDisplay}" 
                                            FontSize="11" 
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                    </StackPanel>
                                    
                                    <!-- Connection Button/Status -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <Button 
                                            Content="Connect"
                                            FontSize="11" 
                                            Padding="12,4" 
                                            Click="ConnectButton_Click"
                                            CommandParameter="{Binding Id}">
                                            <Button.Visibility>
                                                <Binding Path="IsConnected" Mode="OneWay">
                                                    <Binding.Converter>
                                                        <local:InverseBooleanToVisibilityConverter />
                                                    </Binding.Converter>
                                                </Binding>
                                            </Button.Visibility>
                                        </Button>
                                        
                                        <Border
                                            Background="{ThemeResource SystemFillColorSuccessBackground}"
                                            CornerRadius="12"
                                            Padding="8,2">
                                            <Border.Visibility>
                                                <Binding Path="IsConnected" Mode="OneWay">
                                                    <Binding.Converter>
                                                        <local:BooleanToVisibilityConverter />
                                                    </Binding.Converter>
                                                </Binding>
                                            </Border.Visibility>
                                            <TextBlock 
                                                Text="Connected" 
                                                FontSize="10"
                                                FontWeight="SemiBold"
                                                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                                HorizontalAlignment="Center" />
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>

            <!-- Conversations Area -->
            <Grid Grid.Column="1">
                <!-- No Conversations State -->
                <Grid Visibility="{Binding Conversations.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                        <TextBlock Text="ðŸ’¬" FontSize="48" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding WelcomeTitleText}" 
                                   FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding WelcomeMessageText}" 
                                   FontSize="14" HorizontalAlignment="Center" TextAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </Grid>

                <!-- Conversations TabView -->
                <!-- Conversations will be displayed using data binding -->
                <ContentControl Content="{Binding SelectedConversation, Mode=OneWay}"
                               Visibility="{Binding SelectedConversation, Converter={StaticResource NullToInverseVisibilityConverter}}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               VerticalContentAlignment="Stretch">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <controls:ConversationPanel 
                                PeerName="{Binding PeerName, Mode=OneWay}"
                                PeerStatus="{Binding PeerStatus, Mode=OneWay}"
                                MessageSent="ConversationPanel_MessageSent"
                                FileSent="ConversationPanel_FileSent" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Padding="16,8" Spacing="16">
                <TextBlock Text="{Binding ConnectionStatus, Mode=OneWay}" FontSize="12" />
                <TextBlock Text="â€¢" FontSize="12" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                <TextBlock Text="{Binding PeerCountDisplay, Mode=OneWay}" FontSize="12" />
                <ProgressRing Width="12" Height="12" IsActive="{Binding IsDiscovering, Mode=OneWay}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
