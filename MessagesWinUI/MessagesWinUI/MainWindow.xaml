<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MessagesWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MessagesWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="P2P Messenger">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Padding="16,8" Spacing="12">
                <PersonPicture Width="32" Height="32" DisplayName="You" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameTextBlock" Text="Your Name" FontWeight="SemiBold" FontSize="14" />
                    <TextBlock x:Name="StatusTextBlock" Text="Online" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                </StackPanel>
                <Button x:Name="DiscoverButton" Content="Discover Peers" Margin="12,0,0,0" Click="DiscoverButton_Click" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Peers List -->
            <Border Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Peers" Margin="16,16,16,8" FontSize="16" FontWeight="SemiBold" />
                    
                    <ScrollViewer Grid.Row="1">
                        <ListView x:Name="PeersListView" SelectionMode="Single" SelectionChanged="PeersListView_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <PersonPicture Grid.Column="0" Width="24" Height="24" DisplayName="{Binding Name}" Margin="0,0,8,0" />
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" />
                                            <TextBlock Text="{Binding Status}" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2" x:Name="ConnectButton" Content="Connect" 
                                                FontSize="10" Padding="8,4" Click="ConnectButton_Click" 
                                                Tag="{Binding Id}" Visibility="{Binding IsConnected, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                        
                                        <TextBlock Grid.Column="2" Text="Connected" FontSize="10" 
                                                   Foreground="{ThemeResource SystemAccentColor}" VerticalAlignment="Center"
                                                   Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Chat Area with Tabs -->
            <Grid Grid.Column="1">
                <TabView x:Name="ConversationTabView" 
                         TabWidthMode="Equal"
                         CanDragTabs="True"
                         CanReorderTabs="True"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         AddTabButtonClick="ConversationTabView_AddTabButtonClick"
                         TabCloseRequested="ConversationTabView_TabCloseRequested"
                         SelectionChanged="ConversationTabView_SelectionChanged">
                    
                    <!-- Welcome tab (default when no conversations) -->
                    <TabViewItem Header="Welcome" IsClosable="False">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                                <TextBlock Text="ðŸ’¬" FontSize="48" HorizontalAlignment="Center" />
                                <TextBlock Text="Welcome to P2P Messenger" 
                                           FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                <TextBlock Text="Connect to a peer from the left panel to start a conversation" 
                                           FontSize="14" HorizontalAlignment="Center" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </Grid>
                    </TabViewItem>
                    
                </TabView>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Padding="16,8" Spacing="16">
                <TextBlock x:Name="ConnectionStatusTextBlock" Text="Disconnected" FontSize="12" />
                <TextBlock Text="â€¢" FontSize="12" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                <TextBlock x:Name="PeerCountTextBlock" Text="0 peers discovered" FontSize="12" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
